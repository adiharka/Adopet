<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUpdate">

    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purpy7"
        android:gravity="center"
        android:text="UPDATE PROFILE"
        android:textColor="#fff"
        android:textStyle="bold"
        app:itemIconSize="20dp"
        app:itemRippleColor="#C10E0E"
        app:itemTextColor="#ffffff"
        app:labelVisibilityMode="labeled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@null"
        android:src="@drawable/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/uname"
                android:layout_width="355dp"
                android:layout_height="33dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/form"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Username"
                android:textColor="#5C4994"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/uname"
                app:layout_constraintBottom_toTopOf="@id/uname"
                tools:layout_editor_absoluteX="28dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Address"
                android:textColor="#5C4994"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/address"
                app:layout_constraintBottom_toTopOf="@+id/address"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="28dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="255dp"
                android:layout_height="63dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/form"
                android:drawablePadding="10dp"
                android:scrollHorizontally="false"
                android:inputType="text|textMultiLine"
                android:hint="Address"
                android:paddingStart="16dp"
                android:textSize="14dp"
                android:layout_marginRight="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uname"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/gpsBtn"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:layout_marginTop="48dp"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_primary"
                android:textColor="@color/white"
                android:text="Get Current Location"
                app:layout_constraintStart_toEndOf="@+id/address"
                app:layout_constraintTop_toBottomOf="@+id/uname"/>

            <TextView
                android:id="@+id/countryy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Longitude"
                android:textColor="#5C4994"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/longitude"
                app:layout_constraintBottom_toTopOf="@+id/longitude"
                app:layout_constraintHorizontal_weight="1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="213dp" />

            <EditText
                android:id="@+id/longitude"
                android:layout_width="170dp"
                android:layout_height="33dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/form"
                android:drawablePadding="10dp"
                android:hint="longitude value"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.883"
                app:layout_constraintStart_toEndOf="@id/latitude"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/cityy"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Latitude"
                android:textColor="#5C4994"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/latitude"
                app:layout_constraintBottom_toTopOf="@+id/latitude"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="28dp" />

            <EditText
                android:id="@+id/latitude"
                android:layout_width="170dp"
                android:layout_height="33dp"
                android:layout_marginTop="48dp"
                android:layout_marginRight="186dp"
                android:background="@drawable/form"
                android:drawablePadding="10dp"
                android:hint="latitude value"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:ignore="MissingConstraints"  />

            <TextView
                android:id="@+id/phonee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Phone Number"
                android:textColor="#5C4994"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/phone"
                app:layout_constraintBottom_toTopOf="@+id/phone"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="28dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="355dp"
                android:layout_height="33dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/form"
                android:drawablePadding="10dp"
                android:hint="08123456789"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/latitude"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="101dp"
                android:layout_height="42dp"
                android:layout_marginStart="80dp"
                android:layout_marginVertical="40dp"
                android:background="@drawable/btn_secondary"
                android:backgroundTint="#C2C2C2"
                android:text="Cancel"
                android:textColor="#fff"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="645dp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="101dp"
                android:layout_height="42dp"
                android:layout_marginEnd="80dp"
                android:layout_marginVertical="40dp"
                android:background="@drawable/btn_primary"
                android:backgroundTint="#5C4994"
                android:text="Save"
                android:textColor="#fff"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="645dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>